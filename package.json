{
  "name": "innerviso",
  "version": "1.0.2",
  "description": "Software interno da Visonet",
  "main": "main.js",
  "author": "Bruno Witt",
  "license": "ISC",

  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder"
  },

  "build": {
    "appId": "com.visonet.innerviso",
    "productName": "InnerViso",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "main.js",
      "package.json",
      "!node_modules/.cache",
      "!**/*.pyc"
    ],
    "asarUnpack": [
      "backend/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "BrunoWitt",
        "repo": "InnerViso",
        "releaseType": "draft"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icon.ico"
    }
  },


  "dependencies": {
    "cheerio": "^1.1.2",
    "electron-updater": "^6.6.2"
  },

  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
