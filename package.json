{
  "name": "innerviso",
  "version": "1.1.3",
  "description": "Software interno da Visonet",
  "main": "src/main/main.js",
  "author": "Bruno-Witt",
  "license": "ISC",
  "scripts": {
    "start": "npx electron .",
    "build": "electron-builder",
    "publish": "electron-builder"
  },
  "build": {
    "appId": "com.visonet.innerviso",
    "productName": "InnerViso",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "main.js",
      "package.json",
      "!node_modules/.cache",
      "!**/*.pyc"
    ],
    "asarUnpack": [
      "src/scripts/preload.js"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "BrunoWitt",
        "repo": "InnerViso",
        "private": true
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/Vicon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "InnerViso"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.5"
  },
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12"
  }
}
